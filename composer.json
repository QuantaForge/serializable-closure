{
    "name": "quantaquirk/serializable-closure",
    "description": "QuantaQuirk Serializable Closure provides an easy and secure way to serialize closures in PHP.",
    "keywords": ["quantaquirk", "Serializable", "closure"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Tomáš Selič (Smisch-DEV)",
            "email": "contact@smisch.sk"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "nesbot/carbon": "^2.61",
        "pestphp/pest": "^1.21.3",
        "phpstan/phpstan": "^1.8.2",
        "symfony/var-dumper": "^5.4.11"
    },
    "autoload": {
        "psr-4": {
            "QuantaQuirk\\SerializableClosure\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
